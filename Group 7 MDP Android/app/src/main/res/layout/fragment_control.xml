<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.group7.mdp.Fragments.ControlFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/controlContainerRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/rlAutoManual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="48dp"
            android:gravity="center_horizontal|right">

            <Button
                android:id="@+id/btnAuto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="570dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                android:background="@color/copper"
                android:padding="4dp"
                android:text="Auto"
                android:textColor="#FFFFFF" />


            <Button
                android:id="@+id/btnManual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnAuto"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                android:background="@color/copper"
                android:padding="4dp"
                android:text="Update"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnF2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/SendArenaInfo"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="130dp"
                android:layout_marginRight="45dp"
                android:background="@color/copper"
                android:padding="4dp"
                android:text="F2"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnF1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/SendArenaInfo"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="70dp"
                android:layout_marginRight="45dp"
                android:background="@color/copper"
                android:padding="4dp"
                android:text="F1"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/tiltBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/SendArenaInfo"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="45dp"
                android:background="@color/copper"
                android:padding="4dp"
                android:text="On Tilt"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/SendArenaInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="45dp"
                android:background="@color/copper"
                android:padding="4dp"
                android:text="Send Arena"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_calibrateRobot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="250dp"
                android:layout_marginRight="45dp"
                android:background="@color/copper"
                android:text="Calibrate"
                android:textColor="@color/white" />

            <RelativeLayout
                android:id="@+id/rlController"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="-1dp"
                android:gravity="right|bottom"
                android:paddingRight="33dp"
                android:paddingBottom="294dp">


                <ImageView
                    android:id="@+id/ctrl_left"
                    android:layout_width="61dp"
                    android:layout_height="59dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="240dp"
                    android:layout_marginTop="420dp"
                    android:background="@drawable/left_button" />

                <ImageView
                    android:id="@+id/ctrl_right"
                    android:layout_width="61dp"
                    android:layout_height="59dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="324dp"
                    android:layout_marginTop="420dp"
                    android:background="@drawable/right_button" />
            </RelativeLayout>


        </RelativeLayout>

        <ImageView
            android:id="@+id/ctrl_top"
            android:layout_width="61dp"
            android:layout_height="59dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="75dp"
            android:layout_marginBottom="352dp"
            android:background="@drawable/up_button" />

        <ImageView
            android:id="@+id/ctrl_bottom"
            android:layout_width="61dp"
            android:layout_height="59dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="530dp"
            android:layout_marginRight="75dp"
            android:layout_marginBottom="236dp"
            android:background="@drawable/down_button" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="120dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout">

            <RelativeLayout
                android:layout_width="385dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">


                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:text="Status: Idling"
                    android:textSize="15sp"

                    />

                <TextView
                    android:id="@+id/tvMdfstring1"
                    android:layout_width="420dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvStatus"
                    android:layout_marginTop="0dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp"
                    android:text="MDF1: "
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvMdfstring2"
                    android:layout_width="420dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvMdfstring1"
                    android:paddingBottom="10dp"
                    android:text="MDF2: "
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvIDString"
                    android:layout_width="420dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvMdfstring2"
                    android:focusable="false"
                    android:paddingBottom="10dp"
                    android:text="ID String: "
                    android:textSize="10sp" />


            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>